set(EP_OPTION_NAME "USE_${EP_NAME}")
set(EP_REQUIRED_PROJECTS SlicerBiiGTK)

cma_envvar(SLICERPATH APPEND "@BINARY_DIR@/lib/Slicer-${${PROJECT_NAME}_Slicer_VERSION}/qt-loadable-modules/@INTDIR@")

cma_end_definition()
